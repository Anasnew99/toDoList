<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= content.title %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<content.list.length; i++) { %>
      <div class="item">
        <form action='/delete' method="post">
            <input type="checkbox" value=<%=content.type%> name="datatype" onChange='this.form.submit()' >
            <input type = "hidden" value=<%=content.idList[i]%> name="dataid">
            <input type="hidden" name="user_id" value=<%=content.user_id%>>
            <a href=<%= content.forwardLink %> ><%= content.list[i]  %></a>
        </form>

      </div>
      <% } %>

      <form class="item" action='/create' method='post'>

        <input type = 'hidden' name='user_id' value = <%=content.user_id %> >
        <input type=<%= content.type %> name="newItem" size='10'>
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
